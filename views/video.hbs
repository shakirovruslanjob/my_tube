{{>header}}
<a class="red" href="{{url}}" download="{{video.title}}"><span> Скачать</span></a>
<div>
  <video width="100%" height="480" controls>
    <source src="{{url}}" type="video/mp4">
    Your browser does not support the video tag.
  </video>
  <h5>{{video.title}}</h5>
  <a class="mb-2 mute" href="/channels/{{video.channelId}}">{{video.channelTitle}}</a>
<p class="card-text m-0">
          <small class="text-muted">
            <i class="fas fa-eye"></i> {{formatNum statistics.viewCount}} | 
            <i class="fas fa-thumbs-up"></i> {{formatNum statistics.likeCount}} | 
            <i class="fas fa-thumbs-down"></i> {{formatNum statistics.dislikeCount}} 
            </small></p>
      </div>
</div>

<h5 class="text-center my-4">Похожие видео</h5>

<div class="row row-cols-2">
  {{#relatedVideos}}
  <div class="centered col mb-3">
    <div class="card bg-light">
      <a href="/videos/{{id.videoId}}"><img class="card-img-top" src="{{snippet.thumbnails.high.url}}"></a>
      <div class="card-body px-2 py-1">
        <p class="card-text m-0 text-truncate"><small>{{snippet.title}}</small></p>
        <p class="card-text m-0"><a href="/channels/{{channelId}}"><small
              class="text-muted">{{snippet.channelTitle}}</small></a></p>
        <p class="card-text m-0"><small class="text-muted">{{publishedAt}}</small></p>
      </div>
    </div>
  </div>
  {{/relatedVideos}}
  н {{>footer}}